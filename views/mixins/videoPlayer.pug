mixin videoPlayer(video = {})
  .videoPlayer#videoPlayer
    video(src=`/${video.src}`, autoplay)
    .videoPlayer__controls
      .videoPlayer__column
        input.videoPlayer__volume#volume(type="range", min="0", max="100",step="1", value="50")
        span#volumeButton
          i.fas.fa-volume-up
        span
          span#currentTime 00:00:00
          sapn /
          span#totalTime 00:00:00
      .videoPlayer__column
        span#playButton
          i.fas.fa-play
      .videoPlayer__column
        span#fullScreenButton
          i.fas.fa-expand